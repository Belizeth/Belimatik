<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorLightBlue"
    tools:context="com.example.hannes.belimatik.BeliMatikActivity">

    <ImageButton
        android:id="@+id/ibGarageAktor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="88dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/state_garage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp" />

    <TextView
        android:id="@+id/tvDistance_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginTop="162dp"
        android:layout_below="@+id/ibGarageAktor"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/ibCheckDistance"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/state_check_distance"
        android:layout_alignTop="@+id/ibGarageAktor"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelOpenGarage"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginBottom="9dp"
        android:layout_above="@+id/ibCheckDistance"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LabelCheckDistance"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/ibCheckDistance" />

    <ProgressBar
        android:id="@+id/garageProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvDistance_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDistance_first"
        android:layout_below="@+id/tvDistance_first"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="12sp" />


</RelativeLayout>
